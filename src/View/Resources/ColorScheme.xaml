<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="View.ColorScheme"
	x:Name="UserControl"
	d:DesignWidth="800" d:DesignHeight="480">
    <UserControl.Resources>
        <ResourceDictionary Source="Colors.xaml"></ResourceDictionary>
    </UserControl.Resources>    
	
    <StackPanel>
        <StackPanel Orientation="Horizontal" Background="{StaticResource BackgroundBrush}">
            <Rectangle Margin="10" Height="100" Width="100" Fill="{StaticResource SelectionBrush}"></Rectangle>
            <Rectangle Margin="10" Height="100" Width="100" Fill="{StaticResource BorderBrush}"></Rectangle>
            <Rectangle Margin="10" Height="100" Width="100" Fill="{StaticResource TextBrush}"></Rectangle>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Background="{StaticResource BackgroundBrush}">
            <Rectangle Margin="10" Height="100" Width="100" Fill="{StaticResource MaleBrush}"></Rectangle>
            <Rectangle Margin="10" Height="100" Width="100" Fill="{StaticResource FemaleBrush}"></Rectangle>
            <Rectangle Margin="10" Height="100" Width="100" Fill="{StaticResource UnknownBrush}"></Rectangle>
        </StackPanel>

    </StackPanel>
</UserControl>