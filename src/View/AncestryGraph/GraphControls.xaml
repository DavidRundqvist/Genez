<UserControl x:Class="View.AncestryGraph.GraphControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ancestryGraph="clr-namespace:View.AncestryGraph"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance ancestryGraph:DesignGraphControlsPresentations, IsDesignTimeCreatable=True}">
    <StackPanel Orientation="Horizontal" >
        <ancestryGraph:SliderControl DataContext="{Binding AncestorGenerations}" Margin="5,0,5,0"></ancestryGraph:SliderControl>
        <ancestryGraph:SliderControl DataContext="{Binding ChildGenerations}" Margin="5,0,5,0" ></ancestryGraph:SliderControl>
    </StackPanel>
</UserControl>
